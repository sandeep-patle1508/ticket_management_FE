<div class="row">
  <div class="col-lg-6 col-md-6 col-xs-6 col-centered login-box">
      <h2>Member Login</h2>
      <form {{action "authenticate" on="submit"}} class="form-horizontal">
        <div class="form-group">
          <label for="email" class="col-sm-2 control-label">Email</label>
          <div class="col-sm-10">
            {{input value=identification placeholder="Enter Login" class="form-control"}}
          </div>
        </div>
        <div class="form-group">
          <label for="password"class="col-sm-2 control-label">Password</label>
          <div class="col-sm-10">
            {{input value=password type="password" placeholder="Enter Password" class="form-control my-form"}}
          </div>
        </div>
        <br>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Login</button>
          </div>
        </div>
      </form>
      {{#if errorMessage}}
        {{errorMessage}}
      {{/if}}
  </div>
</div>
