<div class="page-header">
  <h2>Add New Ticket</h2>
</div>
<div class="panel panel-primary col-sm-12 col-md-8">

  <div class="panel-body">
    <div class="row-fluid">
      <div class="col-sm-12">
        <form {{action "addTicket" on="submit"}} class="form-horizontal">

          <fieldset>
            <div class="form-group">
              <label for="title">Title</label>
              {{input id="title" name="title" value=ticketTitle class="form-control"}}
            </div>
            {{#unless isCustomer}}
              <div class="form-group">
                <label for="assignee_id">Agent</label>
                {{#x-select id="assignee_id" value=ticketAssigneeId class="form-control" as |xs|}}
                  {{#xs.option }}Please select{{/xs.option}}
                  {{#each usersController.allAgents as |a|}}
                    {{#xs.option value=a.id}}{{a.fullName}}{{/xs.option}}
                  {{/each}}
                {{/x-select}}
              </div>

              <div class="form-group">
                <label for="reporter_id">Customer</label>
                {{#x-select id="reporter_id" value=ticketReporterId class="form-control" as |xs|}}
                  {{#xs.option }}Please select{{/xs.option}}
                  {{#each usersController.allCustomers as |a|}}
                    {{#xs.option value=a.id}}{{a.fullName}}{{/xs.option}}
                  {{/each}}
                {{/x-select}}
              </div>
            {{/unless}}
            <div class="form-group">
              <label for="description">Description</label>
              {{textarea id="description" name="title" value=ticketDescription class="form-control"}}
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Create</button>
              {{#link-to 'tickets' class='btn btn-primary'}}Go Back{{/link-to}}
            </div>
          </fieldset>
        </form>
      </div>

    </div>

  </div>
</div>
<div class="clearfix"></div>
<hr>
