<div class="top-padding">
	{{#unless session.isAuthenticated}}
	  <h2>{{#link-to 'login'}}Login{{/link-to}}</h2>
	{{/unless}}
</div>
{{#if session.isAuthenticated}}
	<div class="row">
		<div class="col-lg-8 col-md-8 col-sm-8 col-md-offset-2">
		  <div class="well text-center overflow-auto">
				<div class="col-lg-12 col-md-12 col-xs-12">
					{{user-profile name=sessionAccount.account.firstName email=sessionAccount.account.email isAdmin=isAdmin}}
				</div>
				<div class="col-lg-12 col-md-12 col-xs-12">
				  {{#if (eq sessionAccount.account.role 'customer')}}
				    <h5>{{#link-to 'tickets'}}Manage Tickets{{/link-to}}</h5>
				  {{/if}}
				</div>
			</div>
	 </div>
	</div>
{{/if}}
